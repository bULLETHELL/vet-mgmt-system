<Window x:Class="vet_mgmt_system.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:vet_mgmt_system"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="_User Management">
                <MenuItem Header="_Create" Click="UserMgmtCreate_Click"/>
                <MenuItem Header="_Delete" />
            </MenuItem>
            <MenuItem Header="_View">
                <MenuItem Header="_Treatments" Click="ViewTreatments_Click"/>
            </MenuItem>
        </Menu>
        <TextBox AcceptsReturn="True" />
    </DockPanel>
</Window>
